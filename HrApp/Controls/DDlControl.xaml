<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HrApp.Controls.DDlControl">
    <ContentView.Content>
                                 <Frame  HorizontalOptions="FillAndExpand" Margin="0" BorderColor="{StaticResource PrimaryColor}" CornerRadius="5" Padding="10,3,5,7">
                                 <Grid ColumnDefinitions="*,20" VerticalOptions="CenterAndExpand">
                              <StackLayout Grid.Column="0" Padding="0" Margin="0">
                              <Label x:Name="TitleLabelTxt" Style="{StaticResource TitleLabel}" FontSize="12" ></Label>
                              <Label x:Name="TextValue" FontSize="15"></Label>
                                  </StackLayout>
                              
                                  <Label FontSize="15" Text="&#xf0dc;" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" FontFamily="FontAwesome" Grid.Column="1"></Label>
                                     </Grid>
                      </Frame>

    </ContentView.Content>
</ContentView>

