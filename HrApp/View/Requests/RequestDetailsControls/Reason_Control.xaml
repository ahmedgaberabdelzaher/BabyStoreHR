<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms" FlowDirection="{Binding }"
        xmlns:ResourceManager="clr-namespace:HrApp.Resources"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    IsVisible="{Binding IsShowRejectionReason}"
    x:Class="HrApp.View.Requests.RequestDetailsControls.Reason_Control">
    <ContentView.Content>
         <Grid >
            <Frame VerticalOptions="EndAndExpand" CornerRadius="5"  Margin="0,10,0,0" Padding="10">
            <StackLayout Padding="10">
                <Editor HeightRequest="200" Text="{Binding RejectionReason}" Placeholder="{x:Static ResourceManager:LangaugeResource.RejectionReason}"></Editor>
                    <StackLayout Orientation="Horizontal"> 
                    <Button Text="{x:Static ResourceManager:LangaugeResource.Send}" Command="{Binding RejectRequestActionCommand}"></Button>
           <Button Text="{x:Static ResourceManager:LangaugeResource.Cancel}" Command="{Binding CancelRejectCommand}"></Button>

                    </StackLayout>

            </StackLayout>
                </Frame>
        </Grid>
   </ContentView.Content>
</ContentView>

