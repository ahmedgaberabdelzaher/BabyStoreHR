<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:ResourceManager="clr-namespace:HrApp.Resources"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" VerticalOptions="EndAndExpand"
    x:Class="HrApp.View.Requests.RequestDetailsControls.ApproveandRejectControl">
    <ContentView.Content>
                    <StackLayout Margin="10" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Orientation="Horizontal">
                <Button Text="{x:Static ResourceManager:LangaugeResource.Approve}" Command="{Binding ApproveRequestCommand}" BorderWidth="1" CornerRadius="5" TextColor="#55CE63" BackgroundColor="#FFFFFF" BorderColor="#55CE63"></Button>
                 <Button Text="{x:Static ResourceManager:LangaugeResource.Reject}"  Command="{Binding RejectCommand}" CornerRadius="5" TextColor="White" BackgroundColor="#F62D51"></Button>
            </StackLayout>
    </ContentView.Content>
</ContentView>

