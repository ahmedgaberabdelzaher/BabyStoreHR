<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms" NavigationPage.HasNavigationBar="False"
              FlowDirection="{Binding FlowDirection}"
        xmlns:ResourceManager="clr-namespace:HrApp.Resources"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:HrApp.Controls"
    xmlns:requestdetailscontrols="clr-namespace:HrApp.View.Requests.RequestDetailsControls"
    x:Class="HrApp.View.Requests.DetailsView.AccessCardRequestDetails">
    <ContentPage.Content>
        <Grid>
            <StackLayout>
        <controls:Header TitelTxt="{x:Static ResourceManager:LangaugeResource.Access_Card_Request}" ></controls:Header>
                            <requestdetailscontrols:EmployeeDDlControl></requestdetailscontrols:EmployeeDDlControl>

          <requestdetailscontrols:AccessCardRequestDetailsControl IsEnabled="False"></requestdetailscontrols:AccessCardRequestDetailsControl>
                <requestdetailscontrols:ApproveandRejectControl></requestdetailscontrols:ApproveandRejectControl>
</StackLayout>
            <requestdetailscontrols:Reason_Control></requestdetailscontrols:Reason_Control>
            <controls:Loader IsVisible="{Binding IsLoading}"></controls:Loader>
        </Grid>
    </ContentPage.Content>
</ContentPage>

