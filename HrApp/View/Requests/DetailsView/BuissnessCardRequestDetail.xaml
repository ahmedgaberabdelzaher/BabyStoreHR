<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:ResourceManager="clr-namespace:HrApp.Resources"
    FlowDirection="{Binding FlowDirection}"
    xmlns:controls="clr-namespace:HrApp.Controls" NavigationPage.HasNavigationBar="False"
    xmlns:requestdetailscontrols="clr-namespace:HrApp.View.Requests.RequestDetailsControls"
    x:Class="HrApp.View.Requests.DetailsView.BuissnessCardRequestDetail">
    <Grid>
        <StackLayout>

        <controls:Header TitelTxt="{x:Static ResourceManager:LangaugeResource.BusinessCardRequest}"></controls:Header>
            <requestdetailscontrols:EmployeeDDlControl IsEnabled="False"></requestdetailscontrols:EmployeeDDlControl>
            <requestdetailscontrols:BuissnessCardRequestDetailsControl IsEnabled="False"></requestdetailscontrols:BuissnessCardRequestDetailsControl>
            <requestdetailscontrols:ApproveandRejectControl></requestdetailscontrols:ApproveandRejectControl>
        </StackLayout>
        <requestdetailscontrols:Reason_Control></requestdetailscontrols:Reason_Control>
        <controls:Loader IsVisible="{Binding IsLoading}"></controls:Loader>
    </Grid>
</ContentPage>

