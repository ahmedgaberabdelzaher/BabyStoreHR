<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" NavigationPage.HasNavigationBar="False"
    xmlns:requestdetailscontrols="clr-namespace:HrApp.View.Requests.RequestDetailsControls"
    xmlns:controls="clr-namespace:HrApp.Controls"
         xmlns:ResourceManager="clr-namespace:HrApp.Resources"
    FlowDirection="{Binding FlowDirection}"
    x:Class="HrApp.View.Requests.DetailsView.MedicalInsuranceDetail">
    <ContentPage.Content>
        <Grid>
            <StackLayout>
                <controls:Header TitelTxt="{x:Static ResourceManager:LangaugeResource.MedicalInsuranceRequest}"></controls:Header>
                <requestdetailscontrols:EmployeeDDlControl IsEnabled="False"></requestdetailscontrols:EmployeeDDlControl>
                <requestdetailscontrols:MedicalInsuranceDetailControl IsEnabled="False"></requestdetailscontrols:MedicalInsuranceDetailControl>
                <requestdetailscontrols:ApproveandRejectControl></requestdetailscontrols:ApproveandRejectControl>
            </StackLayout>
            <requestdetailscontrols:Reason_Control></requestdetailscontrols:Reason_Control>
            <controls:Loader IsVisible="{Binding IsLoading}"></controls:Loader>
        </Grid>
    </ContentPage.Content>
</ContentPage>

